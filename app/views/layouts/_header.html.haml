%header.navbar.navbar-fixed-top.main-navbar-header
    .container
        .row
            .navbar-header.inline-block
                = link_to "strona główna", root_path, id: "logo"
            .main-navbar.navbar-header.main-buttons
                .nav.inline-block.margin-15px-fixed
                    %ul.navlist
                        - if user_signed_in?
                            %li= link_to "Wyloguj się", destroy_user_session_path, method: "delete"
                        - else
                            %li= link_to "Zaloguj się", new_user_session_path
                            %li= link_to "Utwórz konto", new_user_registration_path
                -#.btn-group.inline-block
                    -#%button.profile-button.dropdown-toggle.dropdown-toggle-split{:type=>"button", "data-toggle"=>"dropdown", "aria-haspopup"=>"true", "aria-expanded"=>"false"} Profil
                    -#.dropdown-menu.profile-dropdown
                        -#- if user_signed_in?
                            -#%li= link_to "Wyloguj się", destroy_user_session_path, method: "delete"
                        -#- else
                            -#%li= link_to "Zaloguj się", new_user_session_path
                            -#%li= link_to "Utwórz konto", new_user_registration_path
            .hamburger-menu
                %button.navbar-toggle.collapsed.hamburger{:type => "button", "data-target" => "#navbar-collapse", "data-toggle" => "collapse"}
                    %span.sr-only Toggle navigation
                    %span.icon-bar
                    %span.icon-bar
                    %span.icon-bar
                .collapse.navbar-collapse.hamburger#navbar-collapse
                    %ul.side-menu
                        - if user_signed_in?
                            %li= link_to "Profil", "#"
                            %li= link_to "Wyloguj się", destroy_user_session_path, method: "delete"
                        - else
                            %li= link_to "Zaloguj się", new_user_session_path
                            %li= link_to "Utwórz konto", new_user_registration_path
            
                        