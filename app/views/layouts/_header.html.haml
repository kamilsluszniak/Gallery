%header.main-navbar-header
    .container
        .row
            .navbar-header.inline-block
                = link_to "Portfolio", root_path, id: "logo"
            .main-navbar.navbar-header.main-buttons
                .nav.inline-block.margin-15px-fixed
                    %ul.navlist
                        - if user_signed_in?
                            %li
                                .dropdown
                                    %button.dropdown-toggle.action-button.shadow.animate.red{:type => "button", "data-toggle" => "dropdown"} Drawings
                                    %ul.dropdown-menu
                                        %li= link_to "All drawings", drawings_path
                                        %li= link_to "My drawings", user_drawings_path(current_user)
                                        %li= link_to "Add new drawing", new_drawing_path
                            %li= link_to "Profile", user_path(current_user.id), class: "action-button shadow animate red"
                            %li= link_to "Users", users_path, class: "action-button shadow animate red"
                            %li= link_to "Log out", destroy_user_session_path, method: "delete", class: "action-button shadow animate red"
                        - else
                            %li= link_to "Log in", new_user_session_path, class: "action-button shadow animate red"
                            %li= link_to "Create account", new_user_registration_path, class: "action-button shadow animate red"
            .hamburger-menu
                %button.navbar-toggle.collapsed.hamburger{:type => "button", "data-target" => "#navbar-collapse", "data-toggle" => "collapse"}
                    %span.sr-only Toggle navigation
                    %span.icon-bar
                    %span.icon-bar
                    %span.icon-bar
                .collapse.navbar-collapse.hamburger#navbar-collapse
                    %ul.side-menu
                        - if user_signed_in?
                            %li= link_to "Profile", "#"
                            %li= link_to "Users", users_path
                            %li= link_to "Log out", destroy_user_session_path, method: "delete"
                        - else
                            %li= link_to "Log in", new_user_session_path
                            %li= link_to "Create account", new_user_registration_path
            
                        